{% extends 'base.html.twig' %}

{% block header_title %}
	<h1>Modifier
		<strong>{{ user.username }}</strong>
	</h1>
{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}

	<div class="row">
		{{ form_start(form, {'action' : path('user_edit', {'id' : user.id})}) }}
		<div class="form-group">
			{{ form_label(form.username) }}
			{{ form_widget(form.username) }}

			{{ form_widget(form) }}
		</div>


		<button type="submit" class="btn btn-success pull-right">Modifier</button>
		<a href="{{ path('users_list') }}" class="btn btn-danger pull-right">Annuler</a>
		<a href="{{ path('user_delete', {'id' : user.id}) }}" class="btn btn-danger">Supprimer l'utilisateur</a>
		{{ form_end(form) }}
	</div>
{% endblock %}
